<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <corners android:radius="5dp" />

            <gradient android:angle="90" android:centerColor="#ef8000" android:centerX="0.5" android:centerY="0.5" android:endColor="#f49500" android:startColor="#eb6b00" android:type="linear" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

            <solid android:color="#0F3A4B" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />

            <gradient android:angle="90" android:centerColor="#ef8000" android:centerX="0.5" android:centerY="0.5" android:endColor="#f49500" android:startColor="#eb6b00" android:type="linear" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

            <solid android:color="#0F3A4B" />
        </shape>    
    </item>
    <item>
        <shape>
            <corners android:radius="5dp" />

            <gradient android:angle="90" android:centerColor="#ef8000" android:centerX="0.5" android:centerY="0.5" android:endColor="#f49500" android:startColor="#eb6b00" android:type="linear" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

            <solid android:color="#0691cd" />
        </shape>
    </item>

</selector>